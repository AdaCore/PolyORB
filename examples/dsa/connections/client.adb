with Ada.Command_Line; use Ada.Command_Line;
with Hub;
with Connections;
procedure Client is
   Target : Connections.Connection;
begin
   Target := Hub.Get_Listener (Integer'Value (Argument (1)));
   Connections.Send (Target.all, Argument (2));
end Client;
