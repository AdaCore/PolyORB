@MISS_GNAT_SOCKETS_COPY@with Ada.Unchecked_Conversion;
@MISS_GNAT_SOCKETS_COPY@with Ada.Unchecked_Deallocation;
@MISS_GNAT_SOCKETS_COPY@with GNAT.Sockets.Thin;

procedure PolyORB.Sockets_Copy
  (Source : PolyORB.Sockets.Socket_Set_Type;
   Target : in out PolyORB.Sockets.Socket_Set_Type)
is
   pragma Inline (PolyORB.Sockets_Copy);
   @MISS_GNAT_SOCKETS_COPY@package Gsocthi renames GNAT.Sockets.Thin;
   @MISS_GNAT_SOCKETS_COPY@use type Gsocthi.Fd_Set_Access;
   @MISS_GNAT_SOCKETS_COPY@function To_Fd_Set_Access is
   @MISS_GNAT_SOCKETS_COPY@  new Ada.Unchecked_Conversion
   @MISS_GNAT_SOCKETS_COPY@  (GNAT.Sockets.Socket_Set_Type,
   @MISS_GNAT_SOCKETS_COPY@   Gsocthi.Fd_Set_Access);
   @MISS_GNAT_SOCKETS_COPY@function To_Socket_Set_Type is
   @MISS_GNAT_SOCKETS_COPY@  new Ada.Unchecked_Conversion
   @MISS_GNAT_SOCKETS_COPY@  (Gsocthi.Fd_Set_Access,
   @MISS_GNAT_SOCKETS_COPY@   GNAT.Sockets.Socket_Set_Type);
   @MISS_GNAT_SOCKETS_COPY@procedure Free is
   @MISS_GNAT_SOCKETS_COPY@  new Ada.Unchecked_Deallocation
   @MISS_GNAT_SOCKETS_COPY@  (Gsocthi.Fd_Set, Gsocthi.Fd_Set_Access);
   @MISS_GNAT_SOCKETS_COPY@FSA_Source : Gsocthi.Fd_Set_Access
   @MISS_GNAT_SOCKETS_COPY@  := To_Fd_Set_Access (Source);
   @MISS_GNAT_SOCKETS_COPY@FSA_Target : Gsocthi.Fd_Set_Access
   @MISS_GNAT_SOCKETS_COPY@  := To_Fd_Set_Access (Target);
begin
   --  WAG:3.15
   @MISS_GNAT_SOCKETS_COPY@Free (FSA_Target);
   @MISS_GNAT_SOCKETS_COPY@if FSA_Source /= null then
   @MISS_GNAT_SOCKETS_COPY@   FSA_Target := new Gsocthi.Fd_Set'(FSA_Source.all);
   @MISS_GNAT_SOCKETS_COPY@end if;
   @MISS_GNAT_SOCKETS_COPY@Target := To_Socket_Set_Type (FSA_Target);

   @HAVE_GNAT_SOCKETS_COPY@PolyORB.Sockets.Copy (Source, Target);
end PolyORB.Sockets_Copy;
