#! /bin/sh
#
# This script will return the option to add to `gnatmake' for using
# AdaSockets.
#

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
VERSION=@VERSION@

case $1 in
    --version)
	echo AdaSockets $VERSION
	;;
    --cflags)
	echo -I$libdir/adasockets -L$libdir/adasockets
	;;
    --libs)
	echo -L$prefix/lib -ladasockets
	;;
    *)
	echo 'Usage: adasockets-config [--version | --cflags | --libs]' >&2
	exit 1
	;;
esac
