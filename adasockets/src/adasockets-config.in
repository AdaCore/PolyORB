#! /bin/sh
#
# This script will return the option to add to `gnatmake' for using
# AdaSockets.
#

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
VERSION=@VERSION@

CFLAGS="-I$libdir/adasockets -L$libdir/adasockets"
LIBS="-L$prefix/lib -ladasockets"

case "x$1" in
    x--version)
	echo AdaSockets $VERSION
	;;
    x--cflags)
	echo $CFLAGS
	;;
    x--libs)
	echo $LIBS
	;;
    x)
	echo $CFLAGS -largs $LIBS
	;;
    *)
	echo 'Usage: adasockets-config [--version | --cflags | --libs]' >&2
	exit 1
	;;
esac
