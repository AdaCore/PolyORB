with "common", "src", "idls_cos_event";
limited with "src_corba";

project cos_event is

   Dir := "../cos/event";
   for Source_Dirs use (Common.Build_Dir & Dir, Dir);
   for Object_Dir use Common.Build_Dir & Dir;

   for Library_Name use "polyorb-corba-cos-event-impl";
   for Library_Dir use Common.Build_Dir & Dir & "/" & ".libs";
   for Library_Kind use "static";

   package Compiler is

      for Default_Switches ("Ada")
         use Common.Compiler.Common_Ada_Compiler_Switches;

   end Compiler;

end cos_event;
